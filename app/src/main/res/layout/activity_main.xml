<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.shaheed.takeaclimbchallenge.MainActivity">

    <SearchView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:id="@+id/search_id"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#d630ea30">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name"
            android:textColor="#000"
            android:textStyle="italic"
            android:gravity="center"
            android:textSize="20sp"
            android:id="@+id/user_name"
            android:layout_margin="16dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email"
            android:textColor="#000"
            android:textStyle="italic"
            android:gravity="center"
            android:textSize="20sp"
            android:id="@+id/email"
            android:layout_below="@id/user_name"
            android:layout_margin="16dp"/>

        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_margin="16dp"
            android:src="@drawable/ic_person_black_24dp"
            android:layout_alignParentEnd="true"
            android:layout_gravity="end"/>

    </RelativeLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#e5b2fcc3">

        <ListView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#d891eda8"
            android:id="@+id/medication_list"/>

        <android.support.design.widget.FloatingActionButton
            android:layout_height="50dp"
            android:layout_width="50dp"
            android:id="@+id/fab"
            android:layout_gravity="bottom|end"
            android:src="@drawable/ic_local_hospital_black_24dp"
            android:layout_margin="16dp"
            app:elevation="16dp"
            app:pressedTranslationZ="12dp"
            android:clickable="true"
            android:focusableInTouchMode="false"
            android:focusable="auto"
            app:borderWidth="2dp"
            app:fabSize="auto"
            android:backgroundTint="#ef9494"
            app:rippleColor="@android:color/black"
            android:background="@android:color/black"
            tools:ignore="KeyboardInaccessibleWidget" />

    </FrameLayout>

</LinearLayout>
